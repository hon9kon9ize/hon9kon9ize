{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist", "build"]
    },
    "build:watch": {
      "cache": false
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "cache": false
    },
    "start": {}
  },
  "globalEnv": [
    "NODE_ENV",
    "GCP_BUCKET_NAME",
    "GCP_PROJECT_ID",
    "GCP_BUCKET_NAME",
    "GOOGLE_APPLICATION_CREDENTIALS",
    "HUGGINGFACE_INFERENCE_API",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_DEFAULT_REGION",
    "CDN_URL"
  ]
}
